<UserControl
	x:Class="ElectronicObserver.Avalonia.Controls.EquipmentFilter.EquipmentFilterView"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ElectronicObserver.Avalonia.Controls.EquipmentFilter"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	x:DataType="local:EquipmentFilterViewModel"
	mc:Ignorable="d"
	>
	<StackPanel>
		<ItemsControl ItemsSource="{Binding TypeFilters}">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel Orientation="Horizontal" />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<CheckBox
						Margin="4 0"
						Padding="2 0"
						Content="{Binding Display}"
						IsChecked="{Binding IsChecked}"
						/>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>

		<StackPanel Orientation="Horizontal">
			<TextBox
				Width="300"
				Margin="4 0"
				VerticalAlignment="Center"
				Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged}"
				/>

			<Button
				Margin="4 0"
				Command="{Binding ToggleEquipmentTypesCommand}"
				Content="Toggle"
				/>
		</StackPanel>
	</StackPanel>
</UserControl>
