<UserControl
	x:Class="ElectronicObserver.Avalonia.Controls.ShipFilter.NumberRange"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="NumberRangeControl"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d"
	>
	<StackPanel DataContext="{Binding ElementName=NumberRangeControl}" Orientation="Horizontal">
		<TextBlock
			Margin="2 0"
			VerticalAlignment="Center"
			Text="{Binding Text}"
			/>
		<NumericUpDown
			VerticalAlignment="Center"
			FormatString="0"
			Minimum="0"
			Value="{Binding Minimum}"
			/>
		<TextBlock VerticalAlignment="Center" Text="～" />
		<NumericUpDown
			VerticalAlignment="Center"
			FormatString="0"
			Minimum="0"
			Value="{Binding Maximum}"
			/>
	</StackPanel>
</UserControl>
