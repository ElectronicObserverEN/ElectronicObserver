// 除含有以双斜线开头的注释外，本文件是标准的 json 格式
// 最外层是 array，内部每个配色主题为 object
// [{第一个配色主题},{第二个配色主题},{第三个配色主题} ... ]

[{
  // Color scheme name
  "name": "Dark",

// ####################################
// ## Color format:  #RGB / #RRGGBB  ##
// ####################################

  // Base Color
  // 不排除未来这些基本颜色将被用作其他用途，请勿定义成和名称不符的颜色
  "basicColors": {
    "red":     "#FF0000",    // red - severe fatigue, taiha, 出击任务, elite 级深海
    "orange":  "#FFA500", // orange - moderate fatigue, chuuha, flagship 级深海
    "yellow":  "#FFFF00",    // yellow - light fatigue, shouha、
    "green":   "#00FF00",    // green - 
    "cyan":    "#00FFFF",    // cyan - 装备改修等级
    "blue":    "#0000FF",    // blue - 战意高扬、满血、progress 100%
    "magenta": "#FF00FF",    // magenta - 航空队全灭 ( 残机数 0 )
    "violet":  "#EE82EE"  // violet - 改装任务
  },
  // 数值条颜色
  "barColors": [[
    "#FF0000", // taiha
    "#FF0000", // taiha
    "#FF8800", // chuuha
    "#FF8800", // chuuha
    "#FFCC00", // shouha
    "#FFCC00", // shouha
    "#00CC00", // scratch
    "#00CC00", // scratch
    "#0044CC", // healthy
    "#44FF00", // 未使用 ? (_barColorIncrement)
    "#882222", // 造成伤害
    "#888888"  // bg color
  ],[
    // 开启 "更多阶数值条颜色" 时的定义
    "#FF0000", // taiha
    "#FF0000", // taiha
    "#FF4400", // chuuha
    "#FF8800", // chuuha
    "#FFAA00", // shouha
    "#EEEE00", // shouha
    "#CCEE00", // scratch
    "#00CC00", // scratch
    "#0088FF", // healthy
    "#00FF44", //
    "#882222", // 造成伤害
    "#888888"  // bg color
  ]],
  // Panel Color
  "panelColors": {
    "foreground":  "#FFFFFF", // 主文字色 - 大部分文字颜色
    "background":  "#2D2D30", // 主bg color - 各面板背景颜色
    "foreground2": "#888888", // 副文字色 - 副bg color上的文字颜色
    "background2": "#3F3F46", // 副bg color - 状态栏背景、各种分隔线

//  ############################
//  ##  Default value in [].  ##
//  ############################

  // Status Bar
  "statusBarFG" : "#FFFFFF", // [foreground2] status bar text color
  "statusBarBG" : "#3F3F46", // [background2] status bar bg color

    // 主界面 - 标签页
    // 注：自定义配色刚刚实现，以下三组颜色暂不建议设置为不同颜色
    "tabActiveFG":    "#FFFFFF", // [foreground2] active tab text color
    "tabActiveBG":    "#007ACC", // [background2] active tab bg color
    "tabLostFocusFG": "#FFFFFF", // [foreground2] inactive tab text color
    "tabLostFocusBG": "#2D2D30", // [background2] inactive tab bg color
    "tabHoverFG":     "#FFFFFF", // [foreground2] hover tab text color
    "tabHoverBG":     "#1C97EA", // [background2] hover tab bg color
    // View - Fleet
    "fleet": {
      "conditionVeryTired":   "#F08080", // [red]    severe fatigue
      "conditionTired":       "#FFA07A", // [orange] medium fatigue
      "conditionLittleTired": "#FFE4B5", // [yellow] light fatigue
      "conditionSparkle":     "#90EE90", // [blue]   sparkled
      "equipmentLevel":       "#006666"  // [cyan]   eq lvl value
    },
    // View - HQ
    "hq": {
      "empty": "place_holder"
    },
    // View - Quest
    "quest": {
      "typeFG":         "#000000", // [bg]     任务类型文字色
      "typeHensei":     "#5bef90", // [green]  composition
      "typeShutsugeki": "#feb0b4", // [red]    sortie
      "typeEnshu":      "#c4f28e", // [green]  practice
      "typeEnsei":      "#6be7f5", // [cyan]   expendition
      "typeHokyu":      "#f8ef9b", // [yellow] repair, resupply
      "typeKojo":       "#e6c0a5", // [orange] development, construction
      "typeKaiso":      "#ebd1f4", // [violet] modernization
      "processLT50":    "#FF8800", // [orange] progress <50%
      "processLT80":    "#00CC00", // [green]  progress <80%
      "processLT100":   "#008800", // [cyan]   progress <100%
      "processDefault": "#0088FF"  // [blue]   progress 100%
    },
    // View - Compass
    "compass": {
      "shipClass2":    "#FF0000", // [red]     elite
      "shipClass3":    "#FF8800", // [orange]  flagship
      "shipClass4":    "#006600", // [green]   鬼 / 改 flagship / late type
      "shipClass5":    "#880000", // [violet]  姬 / late type elite
      "shipClass6":    "#0088FF", // [cyan]    水鬼 / late type flagship
      "shipClass7":    "#0000FF", // [blue]    水姬
      "shipDestroyed": "#FF00FF", // [magenta] XXXX-壊
      "eventKind3":    "#000080", // [blue]  night battle
      "eventKind6":    "#008800", // [green]   air raid
      "eventKind5":    "#0088FF"  // [violet]  combined fleet
    },
    // View - Battle
    "battle": {
      "barBossDamaged": "#FFE4E1", // [orange]      Boss damaged state
      "barMVP":         "#FFE4B5", // [blue]        MVP
      "barEscaped":     "#C0C0C0"  // [background2] Retreated
    }
  }
}]