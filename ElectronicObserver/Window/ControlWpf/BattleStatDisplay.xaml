<UserControl x:Class="ElectronicObserver.Window.ControlWpf.BattleStatDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectronicObserver.Window.ControlWpf"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="160">

    <!--UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/ElectronicObserver;component/Properties/Theme.xaml" />
    </-->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label 
            x:Name="SeparatorDisplay" 
            Content="{Binding Separator}" 
            Foreground="DodgerBlue" 
            Padding="-5" 
            Margin="0" 
            Grid.Column="0" 
            Grid.ColumnSpan="2"
            HorizontalContentAlignment="Center" >


        </Label>

        <Label x:Name="AttackNameDisplay" Padding="-5" Margin="0" Grid.Column="0" Content="{Binding AttackName}" HorizontalAlignment="Left" />
        <Label x:Name="ValueDisplay" Padding="-5" Margin="0" Grid.Column="1" Content="{Binding Value}" HorizontalAlignment="Right" />

    </Grid>
</UserControl>
