<UserControl x:Class="ElectronicObserver.Window.ControlWpf.SynergyStatDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectronicObserver.Window.ControlWpf"
             xmlns:properties="clr-namespace:ElectronicObserver.Properties"
             xmlns:resource="clr-namespace:ElectronicObserver.Resource"

             xmlns:viewModels="clr-namespace:ElectronicObserver.Window.ViewModel"

             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="80">

    <UserControl.DataContext>
        <viewModels:SynergyViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ElectronicObserver;component/Properties/Icons.xaml" />
                <ResourceDictionary Source="pack://application:,,,/ElectronicObserver;component/Properties/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="Margin" Value="2" />
                <Setter Property="Background" Value="{StaticResource MaterialDesignToolBarBackground}"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border CornerRadius="4" Padding="3" Margin="2" Background="{StaticResource MaterialDesignPaper}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Grid.Row="1" />
            <Border Grid.Row="2" />
            <Border Grid.Row="3" />
            <Border Grid.Row="4" />
            <Border Grid.Row="5" />
            <Border Grid.Row="6" />
            <Border Grid.Row="7" />

            <Label Grid.Row="0" Content="{x:Static properties:DialogShipSimulationWpf.LabelSynergy}" HorizontalAlignment="Center" />
            <local:Stat StatIcon="{StaticResource IconFirepower}" BaseStat="{Binding Firepower, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" />
            <local:Stat StatIcon="{StaticResource IconTorpedo}" BaseStat="{Binding Torpedo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" />
            <local:Stat StatIcon="{StaticResource IconAA}" BaseStat="{Binding AA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" />
            <local:Stat StatIcon="{StaticResource IconArmor}" BaseStat="{Binding Armor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" />
            <local:Stat StatIcon="{StaticResource IconASW}" BaseStat="{Binding ASW, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" />
            <local:Stat StatIcon="{StaticResource IconEvasion}" BaseStat="{Binding Evasion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="6" />
            <local:Stat StatIcon="{StaticResource IconLoS}" BaseStat="{Binding LoS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="7" />
        </Grid>
    </Border>
</UserControl>