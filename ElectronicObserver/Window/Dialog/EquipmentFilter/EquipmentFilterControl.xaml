<UserControl
	x:Class="ElectronicObserver.Window.Dialog.EquipmentFilter.EquipmentFilterControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
	xmlns:common="clr-namespace:ElectronicObserver.Common"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:electronicObserverTypes="clr-namespace:ElectronicObserverTypes;assembly=ElectronicObserverTypes"
	xmlns:local="clr-namespace:ElectronicObserver.Window.Dialog.EquipmentFilter"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DataContext="{d:DesignInstance local:EquipmentFilterViewModel}"
	mc:Ignorable="d"
	>

	<UserControl.Resources>
		<Style BasedOn="{StaticResource DefaultCheckBoxStyle}" TargetType="CheckBox">
			<Setter Property="Margin" Value="4 0" />
			<Setter Property="Padding" Value="2 0" />
			<Setter Property="MinWidth" Value="0" />
		</Style>
	</UserControl.Resources>
	
	<StackPanel Grid.Row="0">
		<ItemsControl ItemsSource="{Binding TypeFilters}">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel Orientation="Horizontal" />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<CheckBox Content="{Binding Display}" IsChecked="{Binding IsChecked}" />
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>

		<TextBox
				Width="300"
				HorizontalAlignment="Left"
				Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged}"
				/>
	</StackPanel>
</UserControl>
