<UserControl
	x:Class="ElectronicObserver.Window.Settings.SubWindow.ShipTraining.ConfigurationShipTrainingUserControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ElectronicObserver.Window.Settings.SubWindow.ShipTraining"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DataContext="{d:DesignInstance local:ConfigurationShipTrainingViewModel}"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d"
	>
	<StackPanel>
		<CheckBox
			Content="{Binding Translation.FormShipTraining_AllowMultiplePlanPerShip}"
			IsChecked="{Binding AllowMultiplePlanPerShip}"
			ToolTip="{Binding Translation.FormShipTraining_AllowMultiplePlanPerShipToolTip}"
			/>
	</StackPanel>
</UserControl>
