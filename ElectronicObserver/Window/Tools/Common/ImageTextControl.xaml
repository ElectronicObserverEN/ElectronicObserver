<UserControl
	x:Class="ElectronicObserver.Window.Tools.Common.ImageTextControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ElectronicObserver.Window.Tools.DialogAlbumMasterShip"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="ImageText"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d"
	>

	<StackPanel DataContext="{Binding ElementName=ImageText}" Orientation="Horizontal">
		<Image
			Width="16"
			Height="16"
			Source="{Binding Image}"
			/>
		<TextBlock Margin="2 0" Text="{Binding Text}" />
	</StackPanel>
</UserControl>
