<UserControl x:Class="ElectronicObserver.Window.Tools.DialogAlbumMasterShip.ImageTextControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:ElectronicObserver.Window.Tools.DialogAlbumMasterShip"
			 x:Name="ImageText"
			 mc:Ignorable="d"
			 d:DesignHeight="450"
			 d:DesignWidth="800">

	<StackPanel Orientation="Horizontal"
				DataContext="{Binding ElementName=ImageText}">
		<Image Source="{Binding Image}" />
		<TextBlock Text="{Binding Text}"
				   Margin="2 0" />
	</StackPanel>
</UserControl>
