<UserControl
	x:Class="ElectronicObserver.Window.Tools.EquipmentUpgradePlanner.Paging.PagingControlView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ElectronicObserver.Window.Tools.EquipmentUpgradePlanner.Paging"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ui="http://schemas.modernwpf.com/2019"
	x:Name="PagingControlViewElement"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d"
	>
	<StackPanel DataContext="{Binding ViewModel, ElementName=PagingControlViewElement}" Orientation="Horizontal">
		<Button
			Command="{Binding PreviousPageCommand}"
			Content="&lt;"
			IsEnabled="{Binding PreviousPageEnabled}"
			/>

		<TextBlock Margin="5" VerticalAlignment="Center">
			<Run Text="{Binding CurrentPage}" />
			<Run Text="/" />
			<Run Text="{Binding LastPage, Mode=OneWay}" />
		</TextBlock>

		<Button
			Command="{Binding NextPageCommand}"
			Content="&gt;"
			IsEnabled="{Binding NextPageEnabled}"
			/>
	</StackPanel>
</UserControl>
