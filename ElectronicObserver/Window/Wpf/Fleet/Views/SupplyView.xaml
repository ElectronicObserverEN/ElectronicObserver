<UserControl x:Class="ElectronicObserver.Window.Wpf.Fleet.Views.SupplyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 

			 x:Name="SupplyControl"

             d:DesignHeight="20" d:DesignWidth="40">
	<Border Background="Transparent">
		<Grid DataContext="{Binding ViewModel, ElementName=SupplyControl}" Width="32">
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition />
			</Grid.RowDefinitions>

			<ProgressBar
		    Height="4"
			VerticalAlignment="Center"
			Margin="2 2"
		    Grid.Row="0"
		    Minimum="0"
		    Maximum="{Binding FuelMax}"
		    Value="{Binding Fuel, Mode=OneWay}"
		    Foreground="{Binding FuelBarBrush}"
		
		    d:Value="100"
		    d:Foreground="DodgerBlue"
	    />

			<ProgressBar
			Height="4"
			VerticalAlignment="Center"
			Margin="2 2"
			Grid.Row="1"
			Minimum="0"
			Maximum="{Binding AmmoMax}"
			Value="{Binding Ammo, Mode=OneWay}"
			Foreground="{Binding AmmoBarBrush}"
		
			d:Value="100"
			d:Foreground="DodgerBlue"
		/>
		</Grid>
	</Border>
</UserControl>
