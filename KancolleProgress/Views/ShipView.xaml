<UserControl
    x:Class="KancolleProgress.Views.ShipView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
	Name="ShipControl"
    d:DesignHeight="300"
    d:DesignWidth="400">

	<DockPanel>
		<TextBlock 
			Padding="4"
			DockPanel.Dock="Left" 
			Text="{Binding Ship.Name, ElementName=ShipControl}"
			Foreground="{Binding Ship.Color, ElementName=ShipControl}"
			HorizontalAlignment="Left"
		/>

		<TextBlock
			Padding="4"
			DockPanel.Dock="Right"
			Text="{Binding Ship.Level, ElementName=ShipControl}"
			Foreground="{Binding Ship.Color, ElementName=ShipControl}"
			HorizontalAlignment="Right"
		/>
	</DockPanel>
</UserControl>
